  {
    "name": "Rick Roll Redirector",
    "description": "Shenanigans shall ensue",
    "version": "1.3",
    "manifest_version": 3,
    "icons": {
      "16": "/images/rick16.png",
      "32": "/images/rick32.png",
      "48": "/images/rick48.png",
      "128": "/images/rick128.png"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "permissions": ["storage", "tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/rick16.png",
        "32": "/images/rick32.png",
        "48": "/images/rick48.png",
        "128": "/images/rick128.png"
      },
      "icons": {
        "16": "/images/rick16.png",
        "32": "/images/rick32.png",
        "48": "/images/rick48.png",
        "128": "/images/rick128.png"
      }
    }
  }